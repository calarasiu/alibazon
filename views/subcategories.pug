extends layout

block content
  each subcategory in subcategories  
    h2=subcategory.name
    br
    div.image(style=`background-image: url(/images/categories/${subcategory.id}.jpg);`)
    p=subcategory.page_description
    a(href=`/categories/${subcategory.parent_category_id}/${subcategory.name.toLowerCase()}`) View products