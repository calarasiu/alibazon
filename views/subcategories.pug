extends layout

block content
  each subcategory in subcategories  
    h2=subcategory.name
    br
    div.image(style=`background-image: url(/images/categories/${subcategory.id}.jpg);`)
    //- div.image(style=`background-image: url(/images/${subcategory.image});`)
    p=subcategory.page_description
    a(href=`/products/${subcategory.id}`) View products